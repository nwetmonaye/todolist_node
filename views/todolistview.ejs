<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
  </head>
  <body>
    <h1 style="color: brown">To Do List</h1>
    <table>
      <tr>
        <th>ID</th>
        <th>Task</th>
        <th>Delete</th>
      </tr>
      <% data.forEach(function(element) { %>
      <tr>
        <td><%= element.todoId %></td>
        <td><%= element.todoTask %></td>
        <td>
          <form action="/delete" method="POST">
            <input type="hidden" name="todoId" value="<%= element.todoId %>" />
            <input
              type="hidden"
              name="todoTask"
              value="<%= element.todoTask %>"
            />
            <button class="delete" type="submit">X</button>
          </form>
        </td>
      </tr>

      <% }) %>
    </table>
    <form action="/" method="POST">
      <input type="text" name="todoTask" placeholder="Enter Task" />
      <button type="submit">Add</button>
    </form>
  </body>
</html>
